<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <!--<item name="android:navigationBarColor">@color/primary</item>-->
        <item name="toolbarStyle">@style/Toolbar</item>
    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="AppTheme.Main" parent="@style/AppTheme">
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.Detail" parent="@style/AppTheme">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/details_window_enter_transition
        </item>
        <item name="android:windowExitTransition">@transition/details_window_return_transition
        </item>
    </style>

</resources>
