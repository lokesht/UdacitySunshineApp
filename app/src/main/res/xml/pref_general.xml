<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@string/pref_city_zip"
        android:key="@string/pref_keys_zip_code"
        android:singleLine="true"
        android:summary="@string/pref_city_zip"
        android:title="@string/pref_title_zip_code" />

    <ListPreference
        android:defaultValue="@string/pref_unit_metric"
        android:dialogTitle="@string/pref_title_units"
        android:entries="@array/arr_unit_list"
        android:entryValues="@array/arr_unit_list"
        android:key="@string/pref_keys_unit_type"
        android:summary="@string/pref_unit_metric"
        android:title="@string/pref_title_units" />
</PreferenceScreen>