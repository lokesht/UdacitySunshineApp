<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/in.udacity.learning.shunshine.app">

    <in.udacity.learning.custom_view.LocationEditTextPreference
        android:defaultValue="@string/pref_location_default"
        android:key="@string/pref_keys_location"
        android:singleLine="true"
        android:summary="@string/pref_location_default"
        android:title="@string/pref_location_label"
        custom:min_length="3" />

    <ListPreference
        android:defaultValue="@string/pref_unit_metric"
        android:dialogTitle="@string/pref_title_units"
        android:entries="@array/arr_unit_list"
        android:entryValues="@array/arr_unit_list"
        android:key="@string/pref_keys_unit_type"
        android:summary="@string/pref_unit_metric"
        android:title="@string/pref_title_units" />

    <ListPreference
        android:key="@string/pref_key_icon"
        android:defaultValue="@string/pref_icon_color_default"
        android:dialogTitle="@string/pref_icon_color_dialog_title"
        android:entryValues="@array/pref_art_pack_values"
        android:entries="@array/pref_art_pack_options"
        android:summary="@string/pref_icon_summery"
        android:title="@string/pref_icon_title" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="@string/pref_keys_notification"
        android:summaryOff="@string/pref_notification_summery_off"
        android:summaryOn="@string/pref_notification_summery_on"
        android:title="Notification" />
</PreferenceScreen>