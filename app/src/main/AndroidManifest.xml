<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.udacity.learning.shunshine.app" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:parentActivityName=".MainActivity"
            android:name=".DetailActivity"
            android:label="@string/title_activity_detail" >
        </activity>
        <activity
            android:launchMode="singleTask"
            android:parentActivityName=".DetailActivity"
            android:name=".SettingsActivity"
            android:label="@string/title_activity_setting" >
        </activity>

        <provider
            android:authorities="@string/content_authority"
            android:name="in.udacity.learning.dbhelper.WeatherProvider"
            android:exported="false"
            android:syncable="true" />

        <service android:name="in.udacity.learning.service.SunshineService"/>
        <receiver android:name="in.udacity.learning.service.SunshineService$AlarmReceiver"/>
    </application>

</manifest>
